# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/scamalert
MONGODB_URI_PROD=mongodb+srv://user:password@cluster.mongodb.net/scamalert

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4.1
OPENAI_MODEL_MINI=gpt-4.1-mini

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# AWS Services
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:scam-alerts
AWS_DYNAMODB_TABLE=scam-reputation
AWS_S3_BUCKET=scamalert-evidence
AWS_QLDB_LEDGER=scamalert-audit
AWS_SAGEMAKER_ENDPOINT=scamalert-fraud-model

# Blockchain Configuration
BLOCKCHAIN_NETWORK_ID=scamalert-network
BLOCKCHAIN_MEMBER_ID=member-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:8080,https://scamalert.trustguardunit.com

# SMS Gateway
SMS_SHORT_CODE=*765#
SMS_PROVIDER_API_KEY=your-sms-provider-key
